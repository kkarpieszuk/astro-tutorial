---
const pageTitle : string = 'About me';
const identity = {
	name: 'Konrad Karpieszuk',
	country: 'Poland',
	city: 'Krakow',
	avatar: 'https://www.gravatar.com/avatar/e7e0a7c5b9c8f1c3b0f7a3e4a0b1d0c1?s=100',
	hobbies: [ 'Coding', 'Reading', 'Traveling' ],
};
const skills = [ 'Astro', 'PHP', 'JavaScript', 'CSS', 'HTML', 'Markdown', 'Git', 'GitHub', 'VSCode', 'Linux', 'Docker', 'Composer', 'PHPUnit', 'MySQL', 'WordPress', 'WP-CLI' ];
const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>

		<a href="/">Home</a>
		<a href="/about">About</a>
		<a href="/blog">Blog</a>

		<h1>{pageTitle}</h1>

		<h2>..and my astro site</h2>

		<p>My name is {identity.name} and I live in {identity.country}.</p>

		{identity.hobbies.length >= 2 &&
			<p>Two of my hobbies are {identity.hobbies[0]} and {identity.hobbies[1]} </p>
		}

		<h3>My skills</h3>
		<ul>
			{skills.map( (skill) => <li>{skill}</li> )}
		</ul>

		{happy && <p>I am happy</p>}

		{finished && <p>I finished my tutorial</p>}

		{goal === 3 ? <p>my goal is to finish in three days</p> : <p>I dont have goals</p>}

	</body>
</html>
